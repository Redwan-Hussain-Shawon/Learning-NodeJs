<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap Form â€” Name, Email, Password, Age, City</title>

    <!-- Bootstrap 5 CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <div class="card shadow-md p-3">
                    <div class="card-body">
                        <h4 class="card-title mb-3">Registration Form</h4>
                        <p class="text-muted small">Fill in your details and click <strong>Submit</strong>.</p>

                    

                                <!-- Form (uses Bootstrap validation) -->
                                <form id="userForm" action="/file-form-submit" method="post" class="needs-validation" enctype="multipart/form-data">
                                    <!-- Name -->
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Full Name</label>
                                        <input type="text" class="form-control" id="name" name="name"
                                            placeholder="John Doe" required>
                                        <div class="invalid-feedback">Please enter your name.</div>
                                    </div>

                                    <!-- Age -->
                                    <div class="mb-3">
                                        <label for="age" class="form-label">File</label>
                                        <input type="file" class="form-control" id="age" name="userfile"
                                            placeholder="e.g. 25" min="1" max="120" required>
                                    </div>

                    
                                    <!-- Buttons -->
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-primary" type="submit">Submit</button>
                                    </div>
                                </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Popper + Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>